<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">


    <Border Padding="10">
        
        <!--lo stackpanel prende la grandezza del contenuto-->
        <StackPanel>
            
            <!--Top buttons-->
            <Grid>
                <!--divido questa grid in 3 colonne-->
                <Grid.ColumnDefinitions>

                    <!--con l'asterisco prendono la totale lunghezza e la dividono equamente-->
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--spcifico quali sono i contenuti delle colonne sopra-->
                <Button Margin="0 0 10 0"  Grid.Column="0" Content="Apply" />
                <Button Grid.Column="1" Content="Reset" />
                <Button Margin="10 0 0 0" Grid.Column="2" Content="Refresh" />

            </Grid>
        
            
            <!--SECTION: Pulse properties-->
            <TextBlock Text="Pulse properties" FontWeight="Bold" Margin="0 10"/>
            
            <!--Descrizione-->
            <TextBlock Text="Description"/>
            <TextBox Padding="2"/>
            
            <!--Status and revision-->
            <Grid>
                <Grid.ColumnDefinitions>                    
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Status-->
                <StackPanel  Grid.Column="0" Margin="0 0 10 0" >
                    <TextBlock Text="Status"/>
                    <TextBox Padding="2" IsReadOnly="True" Background="#eee"/>
                </StackPanel>

                <!--Revision-->
                <StackPanel  Grid.Column="1">
                    <TextBlock Text="Revision"/>
                    <TextBox Padding="2" IsReadOnly="True" Background="#eee"/>
                </StackPanel>
            </Grid>

            <!--Part Number-->
            <TextBlock Text="Part Number"/>
            <TextBox Padding="2" IsReadOnly="True" Background="#eee"/>


            <!--SECTION: Raw Material-->
            <TextBlock Text="Raw Material" FontWeight="Bold" Margin="0 10"/>

            <!--Material-->
            <TextBlock Text="Material"/>
            <ComboBox Padding="2"/>


            <!--SECTION: Manufactoring Information-->
            <TextBlock Text="Manufactoring Information" FontWeight="Bold" Margin="0 10"/>

            <!--Work Centres-->
            <TextBlock Text="Work Centres" Margin="0 0 0 5"/>
            
            <!--Check-box 2 column-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Column 1-->
                <StackPanel  Grid.Column="0" Margin="0 0 10 0" >
                    <CheckBox Content="Weld"/>
                    <CheckBox Content="Assembly"/>
                    <CheckBox Content="Plasma"/>
                    <CheckBox Content="Laser"/>
                </StackPanel>

                <!--Column 2-->
                <StackPanel  Grid.Column="1">
                    <CheckBox Content="Lathe"/>
                    <CheckBox Content="Drill"/>
                    <CheckBox Content="Fold"/>
                    <CheckBox Content="Roll"/>
                </StackPanel>
            </Grid>

        </StackPanel>
    </Border>
</Window>
